<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_header_layout"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="#34383A">


    <ImageView
        android:id="@+id/drawer_header_imgbutton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="@string/image_de_neville"
        android:scaleType="fitXY"
        android:src="@drawable/neville"
        android:background="@drawable/image_shape"/>

    <TextView
        android:id="@+id/drawer_header_frase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_blue_50"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>